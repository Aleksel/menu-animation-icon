.KebabMenu
  &_item
    flex-direction: column;
    position: relative;
    transition: all 300ms cubic-bezier(0.175, 0.885, 0.32, 1.275);
    div:nth-child(4)
      position: absolute;
      opacity: 0;
      top: 50%;
      margin-top: -6px;
      left: 50%;
    div:nth-child(5)
      position: absolute;
      opacity: 0;
      top: 50%;
      margin-top: -6px;
      left: 50%;

    div:nth-child(4)
      margin-left: -25px;

    div:nth-child(5)
      margin-left: 13px;

  &_item_active
    transform: rotate(45deg);
    div
      opacity: 1 !important;
